<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="1.55" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="60" name="Rotorcraft Open Jet Facility of the Delft University of Technology" security_height="0.3">
  <header>
#include "autopilot.h"
#include "modules/delfly_utils/delfly_utils.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="0.0"/>
    <waypoint name="STDBY" x="0.0" y="0.0"/>
    <waypoint name="TD" x="0.0" y="0.0" alt="1.55"/>
    <waypoint name="TD2" x="0.0" y="0.5" alt="1.55"/>
    <waypoint name="TARGET" x="0.0" y="-0.06" alt="1.55"/>
    <waypoint name="TARGET2" x="0.5" y="-0.06" alt="1.55"/> <!-- waypoint lateral step -->
    <waypoint name="PIV1" x="0" y="-0.06" alt="1.55"/>
    <waypoint name="PIV2" x="0" y="0.45" alt="1.55"/>
    <waypoint name="PIV3" x="0" y="0.50" alt="1.55"/>    
    <waypoint name="_FA1" x="-1.5" y="-1.5"/>
    <waypoint name="_FA2" x="1.5" y="-1.5"/>
    <waypoint name="_FA3" x="1.5" y="1.5"/>
    <waypoint name="_FA4" x="-1.5" y="1.5"/>
  </waypoints>
  <sectors>
    <sector color="red" name="FlightArea">
      <corner name="_FA1"/>
      <corner name="_FA2"/>
      <corner name="_FA3"/>
      <corner name="_FA4"/>
    </sector>
  </sectors>
  <!--exceptions>
    <exception cond="! InsideFlightArea( GetPosX(), GetPosY() )" deroute="Standby"/>
  </exceptions-->
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 1)"/>
      <!--call fun="NavSetWaypointHere(WP_HOME)"/-->
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <!--call fun="NavSetAltitudeReferenceHere()"/-->
      <!--call fun="NavSetGroundReferenceHere()"/-->
    </block>
    <block name="Holding point">
        <deroute block="Go to target"/>
    	<!--call fun="NavKillThrottle()"/-->
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff">
      <exception cond="stateGetPositionEnu_f()->z > 1.5" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block key="1" name="Standby">
      <!--call fun="{ nav_StopPosControl(); windtunnel_set_periodic( FALSE ); FALSE; }"/-->
      <stay wp="STDBY"/>
    </block>
    <block name="Go to target" strip_button="Target" strip_icon="target.png">
      <call fun="nav_set_heading_deg(0)"/>
      <stay wp="TARGET"/>
    </block>
    <block name="Go to Tulip" strip_button="PIV" strip_icon="tulip.png">
      <call fun="nav_set_heading_deg(0)"/>
      <!--stay wp="TARGET2"/-->
      <call fun="{NavGotoWaypoint(WP_PIV); NavVerticalAutoThrottleMode(RadOfDeg(0.000000)); NavVerticalAltitudeMode(WaypointAlt(WP_PIV), 0.); TRUE;}"/>
    </block>
    <block name="Step up" strip_button="step up" strip_icon="upup.png">
      <call fun="NavSetWaypointPos(WP_TD2, 0.0, 0.5)"/>
      <stay wp="TD2" until="stage_time > 30"/>
      <deroute block="Go to target"/>
    </block>
    <block name="Step forward" strip_button="step forward" strip_icon="up.png">
      <call fun="NavSetWaypointPos(WP_TD, 0.0, 1.0)"/>
      <stay wp="TD" until="stage_time > 45"/>
      <deroute block="Go to target"/>
    </block>
    <block name="Step right" strip_button="step right" strip_icon="right.png">
      <call fun="NavSetWaypointPos(WP_TD, 0.5, 0.5)"/>
      <stay wp="TD" until="stage_time > 30"/>
      <deroute block="Go to target"/>
    </block>
    
    <block name="Decrease Altitude">
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <call fun="{ waypoint_set_alt( WP_TD, GetPosAlt() - 1 ); FALSE; }"/>
      <stay wp="TD"/>
    </block>
    <block name="Descend">
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <stay climb="-0.1" vmode="climb" wp="TD"/>
    </block>
    <block key="0" name="land_stdby">
      <go wp="STDBY"/>
    </block>
    <block key="l" name="land here">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight() || 0.1 > GetPosAlt()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed" strip_button="kill" strip_icon="kill.png">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>

