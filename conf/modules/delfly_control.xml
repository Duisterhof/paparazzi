<!DOCTYPE module SYSTEM "module.dtd">

<module name="delfly_control">
  <doc>
    <description></description>
  </doc>
  <header>
    <file name="delfly_control.h"/>
  </header>
  <init fun="delfly_control_init()"/>
  <periodic fun="delfly_control_run()" freq="256" autorun="TRUE"/>
  <periodic fun="delfly_control_module_run()" freq="256" start="delfly_control_start()" stop="delfly_control_stop()" autorun="FALSE"/>
  <makefile>
    <file name="delfly_control.c"/>
    <file name="delfly_guidance.c"/>    
    <file name="delfly_telemetry.c"/>
    <file name="guidance_h_module.c"/>
    <file name="guidance_v_module.c"/>
    <file name="speed_control.c"/>
    <file name="state_estimation.c"/>
    <file name="matlab_include.c"/>
    <file name="matlab_include_speed_controller.c"/>
    <file name="matlab_include_guidance_optimal.c"/>
    <file name="matlab_include_state_estimation.c"/>
  </makefile>
</module>

